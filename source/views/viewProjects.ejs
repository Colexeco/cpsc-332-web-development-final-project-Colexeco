<!DOCTYPE html>
<html lang="en">
    <head>
        <title></title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="css/style.css" rel="stylesheet">
    </head>
    <style>
        .page-wrap {
            background-color: black;
            color: green;
            font-family: Arial, Helvetica, sans-serif;
            text-align: center;
            border: "20px solid blue";
            }

        .table {
            border-radius: 10%;
            text-decoration: none;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .button {
            border-radius: 10%;
            background-color: green;
            color: black;
            text-decoration: none;
            width: 200px;
            padding: 10px;
            margin: 10px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
    <body class="page-wrap">
        <h1>Project created successfully</h1>
        <table class="table">
            <caption>View all projects here...</caption>
            <tr>
                <th>title</th>
                <th>description</th>
                <th>deadline</th>
                <th>completed</th>
                <!-- <th>tasks</th> -->
            </tr>
            <% projectResults.forEach(function(response) { //debugger; %>
                <% console.log(response) %>
            <tr>
                <td id="title">
                    <% response.title %>
                </td>
                <td id="description">
                    <% response.description %>
                </td>
                <td id="deadline">
                    <% response.deadline %>
                </td>
                <td id="completed">
                    <% response.completed %>
                </td>
                <!-- <td id="tasks">
                    <% response.tasks %>
                </td> -->
            </tr>
            <% }); %>
        </table>
        <div class="page-wrap">
            <button class="button"><a class="button" href="/newProject">Create a new project</a></button>
            <button class="button"><a class="button" href="/logout">Log Out</a></button>
        </div>
    </body>
</html>